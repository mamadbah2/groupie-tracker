{{template "base" .}}

{{define "content"}}


<div id="banner">
    <h1 style="font-size : 2.5em; text-align: center;">Groupie Tracker</h1>
</div>

<div class="searchBar">
    <form action="search" method="post">
        <h4>Search Bar</h4>
        <input type="text" list="element" name="research" placeholder="Search your artist">
        <input type="submit" value="Research">
        <datalist id="element">
            {{ range .AllArtist }}
            <option value="{{ .Name }} - artist/band"> {{ .Name }} - artist/band </option>
            <option value="{{ .FirstAlbum }} - firstAlbum"> {{ .FirstAlbum }} - firstAlbum </option>
            <option value="{{ .CreationDate }} - creationDate"> {{ .CreationDate}} - creationDate </option>
            {{ range .Members }}
            <option value="{{ . }} - member"> {{ . }} - member </option>
            {{ end }}
            {{ end }}
            {{ range .AllRelation.Index }}
                {{ range $key, $value := .DatesLocations }}
                <div>
                    <option value="{{$key}} - location"> {{$key}} - location</option>
                </div>
                {{end}}
            {{end}}
        </datalist>
    </form>
</div>

<form method="post" enctype="application/x-www-form-urlencoded">
    <div class="filter-form">
        <div style="display: block">
            <label>Member</label>
            <div style="display: flex" class="filter-member">
                <label for="check1" class="filter-checkbox">
                    1<input type="checkbox" id="check1" name="members1" value="1">
                </label>
                <label for="check2" class="filter-checkbox">
                    2<input type="checkbox" id="check2" name="members2" value="2">
                </label>
                <label for="check3" class="filter-checkbox">
                    3<input type="checkbox" id="check3" name="members3" value="3">
                </label>
                <label for="check4" class="filter-checkbox">
                    4<input type="checkbox" id="check4" name="members4" value="4">
                </label>
                <label for="check5" class="filter-checkbox">
                    5<input type="checkbox" id="check5" name="members5" value="5">
                </label>
                <label for="check6" class="filter-checkbox">
                    6<input type="checkbox" id="check6" name="members6" value="6">
                </label>
                <label for="check7" class="filter-checkbox">
                    7<input type="checkbox" id="check7" name="members7" value="7">
                </label>
                <label for="check8" class="filter-checkbox">
                    8<input type="checkbox" id="check8" name="members8" value="8">
                </label>
            </div>
        </div>
        <div style="display: block">
            <h3>Creation Date</h3>
            <div class="filter-creation-date">
                <div style="display: block">
                    <input type="number" value="1958" min="1958" id="yearStart" name="yearStart" step="1" max="2015">
                    <label for="yearStart">From</label>
                </div>
                <div style="display: block">
                    <input type="number" value="2015" min="1958" id="yearEnd" name="yearEnd" step="1" max="2015">
                    <label for="yearEnd">To</label>
                </div>
            </div>
        </div>
        <div style="display: block">
            <h3>First Album</h3>
            <div style="display: flex">
                <div style="display: block">
                    <input type="date" id="faStart" name="faStart" min="1963-07-30" max="2018-11-15" value="1963-07-30">
                    <label for="faStart">From</label>
                </div>
                <div style="display: block">
                    <input type="date" id="faEnd" name="faEnd" min="1963-07-30" max="2018-11-16" value="2018-11-16">
                    <label for="faEnd">To</label>
                </div>
            </div>
        </div>
        <div style="display: block">
            <h3 for="location">Location</h3>
            <select name="location" id="location">
                <option value="none" selected>--- Select Location ---</option>
                {{range .FilterLocations}}
                <option value="{{.}}">{{.}}</option>
                {{end}}
            </select>
        </div>
        <div style="display: block">
            <h3>Buttons</h3>
            <div style="display: flex;">
                <button type="submit">Filter</button>
                <a style="background-color: #0c151c; padding: 6px; border-radius: 7px; display: flex; align-items: center;" href="/">All</a>
            </div>
        </div>
    </div>
</form>

<div class="container">
    {{ range .AllArtist }}
    <a href="detail?Id={{ .Id }}">
        <div class="box">
            <div class="image">
                <img src="{{ .Image }}" alt="#">
            </div>
            <h3>
                {{ .Name }}
            </h3>
        </div>
    </a>
    {{ end }}
</div>
{{end}}